PUBLIC_IP=

# Server Basic Settings
SERVER_NAME=Conan Exiles Server          # Display name shown in server browser
MAX_PLAYERS=10                           # Maximum concurrent players (1-40)
SERVER_PASSWORD=password                 # Password required to join (leave empty for public)
ADMIN_PASSWORD=admin                     # Admin console password
GAME_PORT=7777                          # Main game port (UDP)
QUERY_PORT=27015                        # Steam server browser port (UDP)

# PvP Settings
PVP_ENABLED=true                        # Enable player vs player combat

# RCON Settings
RCON_ENABLED=False                      # Enable remote console access
RCON_PASSWORD=rcon                      # RCON authentication password
RCON_PORT=25575                         # RCON connection port
RCON_MAX_KARMA=60                       # Maximum karma for RCON users

# Server Region & Community
SERVER_REGION=0                         # Server region (0=EU, 1=NA, 2=Asia, 3=Oceania)
SERVER_COMMUNITY=0                      # Community type (0=None, 1=Purist, 2=Relaxed, 3=Hardcore)

# Experience Multipliers
PLAYER_XP_RATE=1.0                      # Overall XP gain multiplier
PLAYER_XP_KILL=1.0                      # XP from killing enemies
PLAYER_XP_CRAFT=1.0                     # XP from crafting items
PLAYER_XP_TIME=1.0                      # Passive XP over time

# Thrall Settings
THRALL_CONVERSION=1.0                   # Speed of thrall conversion on wheel of pain
THRALL_CRAFTING_TIME=1.0                # Thrall crafting speed multiplier
THRALL_WAKEUP_TIME=1.0                  # Time for unconscious thralls to wake up

# Crafting & Resources
FUEL_BURN_TIME=1.0                      # How long fuel lasts in furnaces/fires
CRAFTING_TIME=1.0                       # Speed of crafting recipes
CRAFTING_COST=1.0                       # Resource cost for crafting
ITEM_CONVERSION_MULTIPLIER=1.0          # Conversion rate for items (e.g., ore to ingots)
HARVEST_AMOUNT=1.0                      # Resources gained from harvesting
RESOURCE_RESPAWN=1.0                    # Speed of resource node respawning

# Damage Multipliers
PLAYER_DAMAGE=1.0                       # Damage dealt by players
PLAYER_DAMAGE_TAKEN=1.0                 # Damage received by players
MINION_DAMAGE=1.0                       # Damage dealt by player thralls/pets
MINION_DAMAGE_TAKEN=1.0                 # Damage received by player thralls/pets
NPC_DAMAGE=1.0                          # Damage dealt by NPCs
NPC_DAMAGE_TAKEN=1.0                    # Damage received by NPCs
STRUCTURE_DAMAGE=1.0                    # Damage dealt to buildings
STRUCTURE_DAMAGE_TAKEN=1.0              # Damage received by buildings
DAMAGE_MULTIPLIER=1.0                   # Global damage multiplier
DAMAGE_TAKEN_MULTIPLIER=1.0             # Global damage taken multiplier

# Survival Settings
STAMINA_COST=1.0                        # Stamina consumption rate
HUNGER_MULTIPLIER=1.0                   # Rate of hunger increase
THIRST_MULTIPLIER=1.0                   # Rate of thirst increase
UNCONSCIOUS_TIME=30                     # Seconds players stay unconscious
CONSCIOUSNESS_DAMAGE=1.0                # Damage to consciousness stat

# Death & Loot Settings
DROP_EQUIPMENT=true                     # Drop items on death
EVERYBODY_LOOT_CORPSE=false             # Allow anyone to loot corpses
LOGOUT_CHARACTERS_REMAIN=true           # Keep character in world after logout
TELEPORT_VULNERABILITY=10               # Seconds of vulnerability after teleporting

# World Settings
SHOW_PLAYER_LOCATION=false              # Show player positions on map
ENABLE_SANDSTORM=true                   # Enable sandstorm weather events
ACTIVE_EVENT=1.0                        # Event frequency multiplier
STORM_GLASS_RESPAWN=1.0                 # Storm glass respawn rate

# Chat & Social
CAN_SEE_PLAYER_NAMES=true               # Display player names above characters
CHAT_SERVER_FILTER=true                 # Enable chat profanity filter
CHAT_GLOBAL_VOICE=true                  # Enable global voice chat
CHAT_LOCAL_VOICE=true                   # Enable local proximity voice chat
SERVER_VOICE_CHAT=true                  # Enable voice chat system
MAX_NUDITY=2                            # Nudity level (0=None, 1=Partial, 2=Full)

# Anti-Cheat & Security
AVATARS_DISABLED=false                  # Disable god avatars
BATTLEYE_ENABLED=true                   # Enable BattlEye anti-cheat
USE_BATTLEYE=true                       # Use BattlEye protection
VALIDATE_PHYSX=false                    # Validate physics calculations

# Network Settings
MULTI_HOME=0.0.0.0                      # Server bind address (0.0.0.0 for all interfaces)
REGION_BLOCK_LIST=                      # Comma-separated list of blocked regions

# Mods
SERVER_MOD_LIST=                        # Comma-separated mod IDs from Steam Workshop
